<Window x:Class="SimpleBookkeeping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Bookkeeping" Width="600" Height="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGrid" Grid.Column="0" Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Path=Date}" />
                <DataGridTextColumn Header="Description" Binding="{Binding Path=Description}" />
                <DataGridTextColumn Header="Amount" Binding="{Binding Path=Amount}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Column="1" Margin="10">
            <Button Content="Import" Click="OnImportClicked" Margin="0 10 0 10" />
            <Button Content="Export" Click="OnExportClicked" Margin="0 10 0 10" />
            <Button Content="Add" Click="OnAddClicked" Margin="0 10 0 10" />
            <Button Content="Delete" Click="OnDeleteClicked" Margin="0 10 0 10" />
        </StackPanel>
    </Grid>
</Window>
